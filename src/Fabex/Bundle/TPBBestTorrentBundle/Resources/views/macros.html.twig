{% macro getBestTPBTorrent(serie, number, torrentId) %}
    <script type="text/javascript">
        $.ajax({
            url: "{{ path('fabex_tpb_best_torrent_getBestTorrent') }}",
            type: "POST",
            data : {
                serie : '{{ serie }}',
                number :  '{{ number }}'
            },
            success: function(data){
                if (data != '') {
                    $('#{{ torrentId }}').attr('href', data);
                    $('#{{ torrentId }}').attr('style', 'color:green');
                } else {
                    $('#{{ torrentId }}').attr('style', 'color:red');
                }
            }
        });
    </script>
{% endmacro %}