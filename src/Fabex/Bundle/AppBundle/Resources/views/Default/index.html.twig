{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Serie</th>
                <th>Season</th>
                <th>Episode</th>
                <th>Torrent</th>
                <th>Subtitle</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for episode in episodes %}
                <tr>
                    <td><h4>{{ episode.show }}</h4> {{ episode.title }}</td>
                    <td>{{ episode.season }}</td>
                    <td>{{ episode.episode }}</td>
                    <td>{{ render_hinclude(controller('FabexAppBundle:Default:getTorrentLinks', {'show': episode.show, 'number': episode.number, 'downloaded': episode.downloaded})) }}</td>
                    <td>{{ render_hinclude(controller('FabexAppBundle:Default:getSubtitleLinks', {'serie': episode.url, 'season': episode.season , 'episode': episode.episode })) }}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
